-- letrec

def sum := letrec sum : Int -> Int := \x if x = 0 then 0 else x + sum (x - 1) in sum;

def fact := \x
  letrec fact' : Int -> Int -> Int := \x \acc if x = 0 then acc else fact' (x - 1) (acc * x)
  in fact' x 1;

def fib :=
  letrec fib' : Int -> Int -> Int -> Int := \n \x \y if n = 0 then x else fib' (n - 1) y (x + y)
  in \n fib' n 0 1;

def writeLn := \x write x >> write "\n";

def mutrec :=
  let two := 2 in
  let one := 1 in
  letrec[f g h]
    f : Int  -> Int := \x {
      if x < one then
        one
      else
        g (x - one) + two * x
    };
    g : Int -> Int := \x {
      if x < one then
        one
      else
        x + h (x - one)
    };
    h : Int -> Int := \x letrec z : Int := {
      if x < one then
        one
      else
        x * f (x - one)
    } in z;
  in writeLn (f 5) >> writeLn (f 10) >> writeLn (f 100) >> writeLn (g 5) >> writeLn (h 5);

letrec x := 3
in
writeLn x >>
writeLn (sum 10000) >>
writeLn (fact 5) >>
writeLn (fact 10) >>
writeLn (fact 100) >>
writeLn (fib 10) >>
writeLn (fib 100) >>
writeLn (fib 1000) >>
mutrec >>
letrec x := 1 in
letrec x' := x + letrec x := 2 in x in
letrec x := x' * x' in
letrec y := x + 2 in
letrec z := x + y in
writeLn (x + y + z)
