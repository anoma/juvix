-- recursive let
module test034;

import Stdlib.Prelude open;

sum : Nat → Nat :=
  let
    sum' : Nat → Nat
      | zero := zero
      | (suc n) := suc n + sum' n;
  in sum';

mutrec : Nat :=
  let
    terminating
    f (x : Nat) : Nat := ite (x < 1) 1 (g (sub x 1) + 2 * x);
    terminating
    g (x : Nat) : Nat := ite (x < 1) 1 (x + h (sub x 1));
    terminating
    h (x : Nat) : Nat := ite (x < 1) 1 (x * f (sub x 1));
  in f 5 + f 10 + g 5 + h 5;

main : Nat := sum 1000 + mutrec;
