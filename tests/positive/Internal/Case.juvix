module Case;

import Stdlib.Prelude open;

isZero : Nat → Bool
  | n :=
    case n
      | zero := true
      | k@(suc _) := false;

id' : Bool → {A : Type} → A → A
  | b :=
    case b
      | true := id
      | false := id;

pred : Nat → Nat
  | n :=
    case n
      | zero := zero
      | suc n := n;

appIf : {A : Type} → Bool → (A → A) → A → A
  | b f :=
    case b
      | true := f
      | false := id;

appIf2 : {A : Type} → Bool → (A → A) → A → A
  | b f a :=
    (case b
        | true := f
        | false := id)
      a;

nestedCase1 : {A : Type} → Bool → (A → A) → A → A
  | b f :=
    case b
      | true :=
        (case b
          | _ := id)
      | false := id;
