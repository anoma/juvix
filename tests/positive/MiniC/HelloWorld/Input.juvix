module Input;

axiom String : Type;

compile String {
  c ↦ "char*";
};

axiom Action : Type;

compile Action {
  c ↦ "int";
};

axiom put-str-ln : String → Action;

compile put-str-ln {
  ghc ↦ "putStrLn";
  c ↦ "putStrLn";
};

infixl 1 >>;
axiom >> : Action → Action → Action;

compile >> {
  ghc ↦ "(>>)";
  c ↦ "sequence";
};

main : Action;
main :=
 put-str-ln "hello world!"
 >> put-str-ln "hello world!"
 >> put-str-ln "hello world!"
 >> put-str-ln "hello world!"
 >> put-str-ln "hello world!"
 >> put-str-ln "hello world!"
 >> put-str-ln "hello world!"
 >> put-str-ln "hello world!"
 >> put-str-ln "hello world!";

end;
