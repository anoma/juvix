module ForwardReferenceModules;

syntax fixity cons := binary {assoc := right};

module ImportantStuffFirst;
  open Forest;

  --- N-Ary tree.
  type Tree (A : Type) := node : A -> Forest A -> Tree A;

  axiom X : Forest.List; -- Is this too unintuitive?
end;

module List;
  syntax operator :: cons;
  --- Inductive list.
  type List (a : Type) :=
    | --- The empty list
      nil : List a
    | --- An element followed by a list
      :: : a → List a → List a;
end;

module Forest;
  open ImportantStuffFirst;

  Forest : Type -> Type
    | A := List.List (Tree A);

  open List public;
end;
