module Fib;

syntax fixity add {arity: binary, assoc: left};

type Nat :=
  | zero : Nat
  | suc : Nat → Nat;

syntax operator + add;

+ : Nat → Nat → Nat
  | zero b := b
  | (suc a) b := suc (a + b);

fib : Nat -> Nat
  | zero := zero
  | (suc zero) := suc zero
  | (suc (suc n)) := fib (suc n) + fib n;
