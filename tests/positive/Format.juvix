-- Single Lambda clause
idLambda : {A : Type} -> A -> A;
idLambda := λ {x := x};

-- Lambda clauses
f : Nat -> Nat;
f :=
  \ {
    -- comment before lambda pipe
    | zero :=
      let
        foo : Nat := 1;
      in foo
    | _ -- comment before lambda :=
    := 1
  };

