module test002;

import Stdlib.Prelude open;

type optbool :=
  | Just : Bool -> optbool
  | Nothing : optbool;

natToBool : Nat -> Bool
  | x := ite (x == 0) false true;

boolToNat : Bool -> Nat
  | x := ite x 1 0;

{-# public: [b] #-}
main : Nat -> Nat -> Nat
  | a b :=
    boolToNat
      <| Î» {
          | x (Just b) := ite x false b
          | _ Nothing := false
        }
        (natToBool a)
