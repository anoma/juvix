-- lists
module test022;

open import Stdlib.Prelude;
open import Stdlib.Data.Nat.Ord;

gen : Nat → List Nat;
gen zero := nil;
gen n@(suc m) := n :: gen m;

sum : Nat → Nat;
sum n := foldl (+) 0 (gen n);

sum' : Nat → Nat;
sum' n := foldr (+) 0 (gen n);

printListNatLn : List Nat → IO;
printListNatLn nil := printStringLn "nil";
printListNatLn (h :: t) := printNatLn h >> printString " :: " >> printListNatLn t;

main : IO;
main :=
  printListNatLn (gen 10) >>
  printListNatLn (reverse (gen 10)) >>
  printListNatLn (filter (λ{x := x > 5}) (gen 10)) >>
  printListNatLn (reverse (map (λ{x := sub x 1}) (gen 10))) >>
  printNatLn (sum 10000) >>
  printNatLn (sum 100000) >>
  printNatLn (sum' 10000) >>
  printNatLn (sum' 100000);

end;
