-- Default values inserted in the arity checker
module test067;

import Stdlib.Data.Nat.Base open;
import Stdlib.Data.Nat.Ord as Ord;
import Stdlib.Data.Product as Ord;
import Stdlib.Data.Bool.Base open;
import Stdlib.Trait.Ord open using {Ordering; LT; EQ; GT; isLT; isGT};

trait
type Ord A :=
  mkOrd {
    cmp : A -> A -> Ordering;
    lt : A -> A -> Bool;
    ge : A -> A -> Bool
  };

mkOrdHelper
  {A}
  (cmp : A -> A -> Ordering)
  {lt : A -> A -> Bool := λ {a b := isLT (cmp a b)}}
  {gt : A -> A -> Bool := λ {a b := isGT (cmp a b)}}
  (n : Nat)
  : Ord A :=
  mkOrd cmp lt gt;

-- ordNatNamed : Ord Nat := mkOrdHelper (cmp := Ord.compare; n := 2);

ordNat : Ord Nat := mkOrdHelper Ord.compare 2;
