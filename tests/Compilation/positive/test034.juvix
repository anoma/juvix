-- letrec
module test034;

open import Stdlib.Prelude;
open import Stdlib.Data.Nat.Ord;

sum : List Nat → Nat;
sum := let {sum' : List Nat → Nat; sum' := λ{zero := zero; suc n := suc n + sum' n}} in sum';

mutrec : IO;
mutrec :=
  let {
    f : Nat → Nat;
    g : Nat → Nat;
    h : Nat → Nat;
    f x := if (x < 1) 1 (g (sub x 1) + 2 * x);
    g x := if (x < 1) 1 (x + h (sub x 1));
    h x := if (x < 1) 1 (x * f (sub x 1));
  } in
  printNatLn (f 5) >> printNatLn (f 10) >> printNatLn (g 5) >> printNatLn (h 5);

main : IO;
main :=
  printNatLn (sum 10000) >>
  mutrec;

end;
